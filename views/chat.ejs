      // $.ChatApp.user_save(text);
    });

    $('button').click(function() {
      $.ChatApp.user_save($('.chat-input').val());
      socket.emit('user_speak', {
        user_text: $('.chat-input').val()
      });
    });

    socket.on('bot_speak', function(data) {
      $.ChatApp.bot_save(data);
    });

